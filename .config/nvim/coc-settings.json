{
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "vue",
    "js",
    "wiki",
    "json",
    "md"
  ],
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  }
}
